<Konto@Popup>:
    GridLayout:
        canvas.before:
            Rectangle:
                source:"img/back_img2.jpg"
                size:root.width,root.height
        Label:
            id:txtkonto
            canvas.before:
                Color:
                    rgba:1,1,1,0.22
                RoundedRectangle:
                    pos:root.width/4, root.height/1.2
                    size:self.size

            text: "" if app.kntShowKv is None else "Ihre Konto : %s"%(app.kntShowKv)
            pos:root.width/4, root.height/1.2
            size_hint_y:None
            width:root.width/2
            height:sp(65)
            font_size:sp(24)
        BoxLayout:
            Label:
                canvas:
                    Color:
                        rgba:0,0,1,0.52
                    RoundedRectangle:
                        pos:0,root.height/1.3
                        size:60,100

                Button:
                    background_normal:"img/home_logo.jpg"

                    background_down: "img/home_logo.jpg"
                    pos:0,root.height/1.2
                    size:60,60
                    on_press: root.dismiss()

                Button:
                    background_normal:"img/home_logo.jpg"
                    background_down: "img/home_logo.jpg"
                    pos:0,root.height/1.3
                    size:60,60
                    on_press: root.dismiss()

        BoxLayout:
            orientation:"vertical"
            width:root.width
            height:70
            pos:0, root.height/1.7
            Label:
                text:"kontonr"
            TextInput:
                id:kontoId
                background_color:[1,1,1,.5]
                size_hint:(1,2)
            Button:
                size_hint:(1,2)
                background_color: [0, 0, 1, 1]
                text:"Send"
                on_press:
                    app.kontoStand(kontoId.text)


